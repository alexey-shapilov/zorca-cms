{% extends skeleton %}
{% block zAll %}
    <div class="c-admin-form">
        <h1>Админка</h1>
        <form  method="POST" action="">
            <input type="hidden" name="token" value="{{ formToken|raw }}">
            <input class="c-admin-form__input" type="text" name="login" id="login" placeholder="Ваш логин">
            <input class="c-admin-form__input" type="password" name="password" id="password" placeholder="Ваш пароль">
            <input type="submit" class="c-admin-form__button" value="Войти">
        </form>
    </div>
{% endblock %}